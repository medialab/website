{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Activités",
  "description": "Les projets menés au médialab",
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "oldSlug": {
      "title": "Slug de l'ancien site",
      "type": "string"
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "name": {
      "title": "Nom",
      "type": "string"
    },
    "baseline": {
      "title": "Accroche",
      "type": "object",
      "properties": {
        "en": {
          "title": "English baseline",
          "type": "string"
        },
        "fr": {
          "title": "Accroche française",
          "type": "string"
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "object",
      "properties": {
        "en": {
          "title": "English description",
          "type": "string"
        },
        "fr": {
          "title": "Description française",
          "type": "string"
        }
      }
    },
    "type": {
      "title": "Type de l'activité",
      "type": "string",
      "enum": [
        "research",
        "teaching",
        "method"
      ],
      "enumId": "activityTypes"
    },
    "content": {
      "title": "Contenu",
      "type": "object",
      "properties": {
        "en": {
          "title": "English content",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Contenu français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "people": {
      "title": "Membres impliqués",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "people"
    },
    "activities": {
      "title": "Activités liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "important": {
      "title": "Structurant?",
      "type": "boolean"
    },
    "active": {
      "title": "Actif?",
      "type": "boolean"
    },
    "startDate": {
      "title": "Date de début",
      "type": "string",
      "formType": "vardate"
    },
    "endDate": {
      "title": "Date de fin",
      "type": "string",
      "formType": "vardate"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    }
  },
  "required": [
    "name"
  ]
}
