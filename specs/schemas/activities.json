{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Activités",
  "description": "Les projets menés au médialab",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "oldSlug": {
      "title": "Slug de l'ancien site",
      "type": "string"
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "name": {
      "title": "Nom",
      "type": "string"
    },
    "cover": {
      "title": "Image de couverture",
      "type": "object",
      "properties": {
        "processed": {
          "title": "Processing?",
          "type": "boolean"
        },
        "file": {
          "title": "Fichier image",
          "type": "string"
        },
        "gamma": {
          "title": "Processing gamma",
          "type": "number"
        },
        "crop": {
          "title": "Crop specs",
          "type": "object",
          "properties": {
            "x": {
              "title": "Crop x",
              "type": "number"
            },
            "y": {
              "title": "Crop y",
              "type": "number"
            },
            "width": {
              "title": "Crop largeur",
              "type": "number"
            },
            "height": {
              "title": "Crop hauteur",
              "type": "number"
            }
          }
        }
      }
    },
    "baseline": {
      "title": "Accroche",
      "type": "object",
      "properties": {
        "en": {
          "title": "English baseline",
          "type": "string"
        },
        "fr": {
          "title": "Accroche française",
          "type": "string"
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "object",
      "properties": {
        "en": {
          "title": "English description",
          "type": "string"
        },
        "fr": {
          "title": "Description française",
          "type": "string"
        }
      }
    },
    "type": {
      "title": "Type de l'activité",
      "type": "string",
      "enum": [
        "research",
        "teaching",
        "method"
      ],
      "enumId": "activityTypes"
    },
    "content": {
      "title": "Contenu",
      "type": "object",
      "properties": {
        "en": {
          "title": "English content",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Contenu français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "people": {
      "title": "Membres impliqués",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "people"
    },
    "activities": {
      "title": "Activités liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "attachments": {
      "title": "Pièces jointes",
      "type": "array",
      "items": {
        "title": "Pièce jointe",
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "attachment",
              "string",
              "url"
            ]
          },
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "important": {
      "title": "Structurant?",
      "type": "boolean"
    },
    "active": {
      "title": "Actif?",
      "type": "boolean"
    },
    "startDate": {
      "title": "Date de début",
      "type": "string",
      "formType": "vardate",
      "precision": "month"
    },
    "endDate": {
      "title": "Date de fin",
      "type": "string",
      "formType": "vardate",
      "precision": "month"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "slugs"
  ]
}
