{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Actualités",
  "description": "Les actualités du médialab",
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "type":{
      "title": "Type",
      "type": "string",
      "enum": ["event","post","notice"],
      "enumId": "newsTypes"
    },
    "title": {
      "title": "Titre",
      "type": "object",
      "properties": {
        "en": {
          "title": "English title",
          "type": "string"
        },
        "fr": {
          "title": "Titre français",
          "type": "string"
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "object",
      "properties": {
        "en": {
          "title": "English description",
          "type": "string"
        },
        "fr": {
          "title": "Description en français",
          "type": "string"
        }
      }
    },
    "place": {
      "title": "Lieux",
      "type": "string",
      "formType": "suggest"
    },
    "label": {
      "title": "Label",
      "type": "object",
      "properties": {
        "en": {
          "title": "English label",
          "type": "string",
          "formType": "suggest"
        },
        "fr": {
          "title": "Label français",
          "type": "string",
          "formType": "suggest"
        }
      }
    },
    "content": {
      "title": "Contenu",
      "type": "object",
      "properties": {
        "en": {
          "title": "English content",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Contenu français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "activities": {
      "title": "Activités liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "people": {
      "title": "Gens impliqués",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "people"
    },
    "publications": {
      "title": "Publications liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "publications"
    },
    "startDate": {
      "title": "Date de début",
      "type": "string",
      "formType": "vardate"
    },
    "endDate": {
      "title": "Date de fin",
      "type": "string",
      "formType": "vardate"
    },
    "internal": {
      "title": "Interne ?",
      "type": "boolean"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    }
  },
  "required": [
    "title"
  ]
}
