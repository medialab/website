{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Actualités",
  "description": "Les actualités du médialab",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "oldSlug": {
      "title": "Slug de l'ancien site",
      "type": "string"
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "type": {
      "title": "Type",
      "type": "string",
      "enum": [
        "event",
        "post",
        "notice"
      ],
      "enumId": "newsTypes"
    },
    "title": {
      "title": "Titre",
      "type": "object",
      "properties": {
        "en": {
          "title": "English title",
          "type": "string"
        },
        "fr": {
          "title": "Titre français",
          "type": "string"
        }
      }
    },
    "cover": {
      "title": "Image de couverture",
      "type": "object",
      "properties": {
        "processed": {
          "title": "Processing?",
          "type": "boolean"
        },
        "file": {
          "title": "Fichier image",
          "type": "string"
        },
        "gamma": {
          "title": "Processing gamma",
          "type": "number"
        },
        "crop": {
          "title": "Crop specs",
          "type": "object",
          "properties": {
            "x": {
              "title": "Crop x",
              "type": "number"
            },
            "y": {
              "title": "Crop y",
              "type": "number"
            },
            "width": {
              "title": "Crop largeur",
              "type": "number"
            },
            "height": {
              "title": "Crop hauteur",
              "type": "number"
            }
          }
        },
        "credits": {
          "title": "Crédits",
          "type": "string"
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "object",
      "properties": {
        "en": {
          "title": "English description",
          "type": "string"
        },
        "fr": {
          "title": "Description en français",
          "type": "string"
        }
      }
    },
    "place": {
      "title": "Lieux",
      "type": "string",
      "formType": "suggest"
    },
    "label": {
      "title": "Label",
      "type": "object",
      "properties": {
        "en": {
          "title": "English label",
          "type": "string",
          "formType": "suggest"
        },
        "fr": {
          "title": "Label français",
          "type": "string",
          "formType": "suggest"
        }
      }
    },
    "content": {
      "title": "Contenu",
      "type": "object",
      "properties": {
        "en": {
          "title": "English content",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Contenu français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "activities": {
      "title": "Activités liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "people": {
      "title": "Gens impliqués",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "people"
    },
    "productions": {
      "title": "Productions liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "productions"
    },
    "attachments": {
      "title": "Pièces jointes",
      "type": "array",
      "items": {
        "title": "Pièce jointe",
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "attachment",
              "string",
              "url"
            ]
          },
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "lang": {
            "type": "string",
            "enum": [
              "en",
              "fr"
            ],
            "enumId": "language"
          }
        },
        "required": [
          "type",
          "label",
          "value"
        ]
      }
    },
    "startDate": {
      "title": "Date de début",
      "type": "string",
      "formType": "vardatetime",
      "precision": "day"
    },
    "endDate": {
      "title": "Date de fin",
      "type": "string",
      "formType": "vardatetime",
      "precision": "day"
    },
    "internal": {
      "title": "Interne ?",
      "type": "boolean"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    }
  },
  "required": [
    "title",
    "slugs"
  ]
}
