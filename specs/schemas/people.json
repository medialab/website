{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Membres",
  "description": "Les membres du médialab",
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "oldSlug": {
      "title": "Slug de l'ancien site",
      "type": "string"
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "firstName": {
      "title": "Prénom",
      "type": "string"
    },
    "lastName": {
      "title": "Nom de famille",
      "type": "string"
    },
    "function": {
      "title": "Fonction",
      "type": "object",
      "properties": {
        "en": {
          "title": "English title",
          "type": "string"
        },
        "fr": {
          "title": "Titre français",
          "type": "string"
        }
      },
      "formType": "suggest"
    },
    "domain": {
      "title": "Domaine",
      "type": "string",
      "enum": ["academic", "technic", "design", "pedagogic", "administrative"],
      "enumId" : "domains"
    },
    "currentStatus": {
      "title": "Occupation actuelle",
      "type": "object",
      "properties": {
        "en": {
          "title": "Current status",
          "type": "string"
        },
        "fr": {
          "title": "Occupation actuelle",
          "type": "string"
        }
      }
    },
    "bio": {
      "title": "Biographie",
      "type": "object",
      "properties": {
        "en": {
          "title": "English bio",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Bio français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "contact": {
      "title": "Contact",
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "membership": {
      "title": "Type de membre",
      "type": "string",
      "enum": [
        "associate",
        "member"
      ],
      "enumId": "membershipTypes"
    },
    "mainActivities": {
      "title": "Activités principales",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "mainPublications": {
      "title": "Publications principales",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "publications"
    },
    "active": {
      "title": "Actif?",
      "type": "boolean"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    },
    "idSpire":{
      "title": "id Spire",
      "type": "string"
    },
    "idLdap":{
      "title": "Identifiant ldap",
      "type": "string"
    }
  },
  "required": [
    "firstName",
    "lastName"
  ]
}
