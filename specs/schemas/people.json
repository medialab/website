{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Membres",
  "description": "Les membres du médialab",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "oldSlug": {
      "title": "Slug de l'ancien site",
      "type": "string"
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "firstName": {
      "title": "Prénom",
      "type": "string"
    },
    "lastName": {
      "title": "Nom de famille",
      "type": "string"
    },
    "cover": {
      "title": "Image de couverture",
      "type": "object",
      "properties": {
        "processed": {
          "title": "Processing?",
          "type": "boolean"
        },
        "file": {
          "title": "Fichier image",
          "type": "string"
        },
        "gamma": {
          "title": "Processing gamma",
          "type": "number"
        },
        "crop": {
          "title": "Crop specs",
          "type": "object",
          "properties": {
            "x": {
              "title": "Crop x",
              "type": "number"
            },
            "y": {
              "title": "Crop y",
              "type": "number"
            },
            "width": {
              "title": "Crop largeur",
              "type": "number"
            },
            "height": {
              "title": "Crop hauteur",
              "type": "number"
            }
          }
        },
        "credits": {
          "title": "Crédits",
          "type": "string"
        }
      }
    },
    "role": {
      "title": "Fonction",
      "type": "object",
      "properties": {
        "en": {
          "title": "English function",
          "type": "string"
        },
        "fr": {
          "title": "Fonction en français",
          "type": "string"
        }
      },
      "formType": "suggest"
    },
    "domain": {
      "title": "Domaine",
      "type": "string",
      "enum": [
        "academic",
        "tech",
        "design",
        "pedagogy",
        "admin"
      ],
      "enumId" : "domains"
    },
    "status": {
      "title": "Occupation actuelle",
      "type": "object",
      "properties": {
        "en": {
          "title": "Current status",
          "type": "string"
        },
        "fr": {
          "title": "Occupation actuelle",
          "type": "string"
        }
      }
    },
    "bio": {
      "title": "Biographie",
      "type": "object",
      "properties": {
        "en": {
          "title": "English bio",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Bio français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "contacts": {
      "title": "Contacts",
      "type": "array",
      "items": {
        "title": "Contact",
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "attachment",
              "string",
              "url"
            ]
          },
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          },
          "lang": {
            "type": "string",
            "enum": [
              "en",
              "fr"
            ],
            "enumId": "language"
          }
        },
        "required": [
          "type",
          "label",
          "value"
        ]
      }
    },
    "membership": {
      "title": "Type de membre",
      "type": "string",
      "enum": [
        "associate",
        "member",
        "invited"
      ],
      "enumId": "membershipTypes"
    },
    "mainActivities": {
      "title": "Activités principales",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "mainProductions": {
      "title": "Productions principales",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "productions"
    },
    "active": {
      "title": "Actif?",
      "type": "boolean"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    },
    "spire": {
      "title": "Informations SPIRE",
      "type": "object",
      "properties": {
        "id": {
          "title": "Identifiant SPIRE",
          "type": "string"
        }
      }
    },
    "ldap":{
      "title": "Identifiant LDAP",
      "type": "string"
    }
  },
  "required": [
    "firstName",
    "lastName",
    "slugs"
  ]
}
