{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Productions",
  "description": "Les productions du médialab",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "oldSlug": {
      "title": "Slug de l'ancien site",
      "type": "string"
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "title": {
      "title": "Titre",
      "type": "object",
      "properties": {
        "en": {
          "title": "English title",
          "type": "string"
        },
        "fr": {
          "title": "Titre français",
          "type": "string"
        }
      }
    },
    "cover": {
      "title": "Image de couverture",
      "type": "object",
      "properties": {
        "processed": {
          "title": "Processing?",
          "type": "boolean"
        },
        "file": {
          "title": "Fichier image",
          "type": "string"
        },
        "gamma": {
          "title": "Processing gamma",
          "type": "number"
        },
        "crop": {
          "title": "Crop specs",
          "type": "object",
          "properties": {
            "x": {
              "title": "Crop x",
              "type": "number"
            },
            "y": {
              "title": "Crop y",
              "type": "number"
            },
            "width": {
              "title": "Crop largeur",
              "type": "number"
            },
            "height": {
              "title": "Crop hauteur",
              "type": "number"
            }
          }
        },
        "credits": {
          "title": "Crédits",
          "type": "string"
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "object",
      "properties": {
        "en": {
          "title": "Description in english",
          "type": "string"
        },
        "fr": {
          "title": "Description en français",
          "type": "string"
        }
      }
    },
    "type": {
      "title": "Type de la production",
      "type": "string",
      "enum": [
        "article",
        "book",
        "communication",
        "thesis",
        "grey",
        "datascape",
        "website",
        "software",
        "code",
        "exhibition",
        "simulation",
        "workshop",
        "conference",
        "media"
      ],
      "enumId": "productionTypes"
    },
    "content": {
      "title": "Contenu",
      "type": "object",
      "properties": {
        "en": {
          "title": "English content",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Contenu français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "authors": {
      "title": "Auteurs",
      "type": "string"
    },
    "activities": {
      "title": "Activités liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "productions": {
      "title": "Productions liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "productions"
    },
    "people": {
      "title": "Membres du labo",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "people"
    },
    "date": {
      "title": "Date",
      "type": "string",
      "formType": "vardate",
      "precision": "year"
    },
    "ref": {
      "title": "Référence biblio",
      "type": "string"
    },
    "url": {
      "title": "Lien externe",
      "type": "string"
    },
    "external": {
      "title": "external?",
      "type": "boolean"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    },
    "active": {
      "title": "Actif?",
      "type": "boolean"
    },
    "spire": {
      "title": "Information SPIRE",
      "type": "object",
      "properties": {
        "id": {
          "title": "Identifiant SPIRE",
          "type": "string"
        },
        "meta": {
          "title": "Metadonnées SPIRE",
          "type": "object",
          "properties": {
            "rec_id" : {
              "title": "Identifiant SPIRE",
              "type": "string"
            }
          }
        },
        "generatedFields": {
          "title": "champs de générés depuis SPIRE",
          "type": "object",
          "properties": {
            "authors" : {
              "title": "liste des auteurs",
              "type": "string"
            }
          } 
        },
        "lastUpdated": {
          "title": "Timestamp of last update",
          "type": "number"
        }
      }
    },
    "attachments": {
      "title": "Pièces jointes",
      "type": "array",
      "items": {
        "title": "Pièce jointe",
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "attachment",
              "string",
              "url"
            ]
          },
          "label": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "usages": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["collect", "curation", "processing", "exploration", "writing"],
        "enumId": "toolUsages"
      }
    },
    "audience": {
      "type": "string",
      "enum": ["developers", "all"],
      "enumId": "toolAudience"

    },
    "status": {
      "type": "string",
      "enum": ["usable", "experimental", "archived"],
      "enumId": "toolStatus"
    }
  },
  "required":[
    "slugs"
  ]
}
