{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Productions",
  "description": "Les productions du médialab",
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "title": {
      "title": "Titre",
      "type": "object",
      "properties": {
        "en": {
          "title": "English title",
          "type": "string"
        },
        "fr": {
          "title": "Titre français",
          "type": "string"
        }
      }
    },
    "abstract": {
      "title": "Résumé",
      "type": "object",
      "properties": {
        "en": {
          "title": "English abstract",
          "type": "string"
        },
        "fr": {
          "title": "Résumé français",
          "type": "string"
        }
      }
    },
    "type": {
      "title": "Type de la publication",
      "type": "string",
      "enum": [
        "conference",
        "tool",
        "web"
      ],
      "enumId": "publicationTypes"
    },
    "content": {
      "title": "Contenu",
      "type": "object",
      "properties": {
        "en": {
          "title": "English content",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Contenu français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "activities": {
      "title": "Activités liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "people": {
      "title": "Gens impliqués",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "people"
    },
    "publications": {
      "title": "Publications liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "publications"
    },
    "date": {
      "title": "Date",
      "type": "string",
      "formType": "vardate"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    }
  }
}
