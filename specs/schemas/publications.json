{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Productions",
  "description": "Les productions du médialab",
  "type": "object",
  "properties": {
    "id": {
      "title": "Identifiant",
      "type": "string"
    },
    "slugs": {
      "title": "Slugs",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "oldSlug": {
      "title": "Slug de l'ancien site",
      "type": "string"
    },
    "lastUpdated": {
      "title": "Timestamp of last update",
      "type": "number"
    },
    "title": {
      "title": "Titre",
      "type": "object",
      "properties": {
        "en": {
          "title": "English title",
          "type": "string"
        },
        "fr": {
          "title": "Titre français",
          "type": "string"
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "object",
      "properties": {
        "en": {
          "title": "Description in english",
          "type": "string"
        },
        "fr": {
          "title": "Description en français",
          "type": "string"
        }
      }
    },
    "type": {
      "title": "Type de la publication",
      "type": "string",
      "enum": [
        "article",
        "book",
        "communication",
        "workingPaper",
        "datascape",
        "website",
        "software",
        "code",
        "exhibition",
        "simulation",
        "workshop",
        "conference"
      ],
      "enumId": "publicationTypes"
    },
    "content": {
      "title": "Contenu",
      "type": "object",
      "properties": {
        "en": {
          "title": "English content",
          "type": "string",
          "formType": "content"
        },
        "fr": {
          "title": "Contenu français",
          "type": "string",
          "formType": "content"
        }
      }
    },
    "activities": {
      "title": "Activités liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "activities"
    },
    "authors": {
      "title": "Auteurs",
      "type": "string"
    },
    "publications": {
      "title": "Publications liées",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "publications"
    },
    "date": {
      "title": "Date",
      "type": "string",
      "formType": "vardate"
    },
    "spireJson": {
      "title": "Bibtex",
      "type": "string",
      "formType": "vardate"
    },
    "people": {
      "title": "Membres du labo",
      "type": "array",
      "items": {
        "type": "string"
      },
      "formType": "ref",
      "model": "people"
    },
    "biblioRef": {
      "title": "Référence biblio",
      "type": "string",
      "formType": "content"
    },
    "URL": {
      "title": "Lien externe",
      "type": "string"
    },
    "draft": {
      "title": "Draft?",
      "type": "boolean"
    },
    "active": {
      "title": "Actif?",
      "type": "boolean"
    },
    "idSpire": {
      "title": "id Spire",
      "type" : "string"
    }
  }
}
